{% extends 'base.html.twig' %}

{% block title %}Medecins index{% endblock %}

{% block body %}
    <h1>Medecins index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom_med</th>
                <th>Adresse</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for medecin in medecins %}
            <tr>
                <td>{{ medecin.id }}</td>
                <td>{{ medecin.nomMed }}</td>
                <td>{{ medecin.adresse }}</td>
                <td>{{ medecin.email }}</td>
                <td>
                    <a href="{{ path('app_medecins_show', {'id': medecin.id}) }}">show</a>
                    <a href="{{ path('app_medecins_edit', {'id': medecin.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_medecins_new') }}">Create new</a>
{% endblock %}
